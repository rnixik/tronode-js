body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF
.game
  height: 600px
  width: 800px
  background: #eee
  border: 1px solid black

.game .bike
  position: relative
.game .bike .bike-trail
  position: absolute
.bike-1 .bike-trail
  background-color: #f00
.bike-2 .bike-trail
  background-color: #0f0
.bike-3 .bike-trail
  background-color: #00f
.bike-4 .bike-trail
  background-color: #0ff
.bike-5 .bike-trail
  background-color: #f0f

.game .bike .bike-head
  position: absolute
  z-index: 10
  width: 5px
  height: 5px
  border: 1px solid black

 .game .bike .bike-name
   width: 40px
   height: 12px
   font-size: 10px
   overflow: hidden
   position: relative
   top: 4px

#bike-example .bike-trail{
  width: 30px
  height: 5px
  display: inline-block
}

.join-room-container
  margin: 12px 0
  border: 1px solid black
  width: 560px
  padding: 16px
  overflow: hidden
.join-room-container .room-option-checked
  font-weight: bold
